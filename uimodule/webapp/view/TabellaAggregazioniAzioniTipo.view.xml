<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout" xmlns:ui="sap.ui.table" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" controllerName="PM030.APP1.controller.TabellaAggregazioniAzioniTipo">
<NavContainer
			id="navCon"
			class="navContainerControl sapUiSmallMarginBottom">
    <f:DynamicPage id="dynamicPageId" preserveHeaderStateOnScroll="true" showFooter="false" fitContent="true" class="sapUiContentPadding" >
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                    <HBox height="100%" alignItems="Center" alignContent="Center" justifyContent="Center">
                         <Button type="Emphasized" text="Home"  press="onBack" class="sapUiSmallMarginEnd"/>
                        <Title text="{i18n>TitoloAZT}" class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:content>
                <f:actions></f:actions>
                <f:navigationActions>
                    <Button text="Nuovo"  icon="sap-icon://document" press="onNuovo" class="sapUiTinyMarginBegin"/>
                    <Button text="Modifica" icon="sap-icon://edit" press="onModify" class="sapUiTinyMarginBegin"/>
                    <Button text="Copia"  icon="sap-icon://copy" press="onCopy" class="sapUiTinyMarginBegin"/>
                    <Button text="Cancella" icon="sap-icon://delete" press="onCancel" class="sapUiTinyMarginBegin"/>   
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar id="filterbarPiste" useToolbar="false" search="onSearchResult" showRestoreButton="true" showClearButton="true">
                        <fb:filterGroupItems>

                            <fb:FilterGroupItem id="divisione" visible="true" groupName="__$INTERNAL$" name="div" label="{i18n>Divisione}" partOfCurrentVariant="true" visibleInFilterBar="true">
                              <fb:control>
                                <!-- <Input type="Text" value="{FilterModel>/Divisione}" required="true" maxLength="4"/> -->
                              <MultiComboBox id="cbDivisione"  value="{sRaggruppamento>/DIVISIONE}" items="{ path: 'sHelp>/T_AGGREG/Divisione', sorter: [{ path: 'DIVISIONE', descending: false, group:false }] }" > 
                                  <core:Item key="{sHelp>Werks}" text="{sHelp>Werks}" />
                                </MultiComboBox>
                              </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="sistema" visible="true" groupName="__$INTERNAL$" name="sis" label="{i18n>Sistema}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                 <MultiComboBox id="cbSistema" value="{sRaggruppamento>/RAGGRUPPAMENTO}" items="{ path: 'sHelp>/T_AGGREG/Sistema', sorter: [{ path: 'RAGGRUPPAMENTO', descending: false, group:false }] }" > 
                                    <core:Item key="{sHelp>Sistema}" text="{sHelp>Sistema}"/>
                                </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="classe" visible="true" groupName="__$INTERNAL$" name="clas" label="{i18n>Classe}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                <MultiComboBox id="cbClasse"  value="{sRaggruppamento>/DESC_RAGGR}" items="{ path: 'sHelp>/T_AGGREG/Classe', sorter: [{ path: 'DESC_RAGGR', descending: false, group:false }] }" > 
                                    <core:Item key="{sHelp>Classe}" text="{sHelp>Classe}"/>
                                </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="nProAggr" visible="true" groupName="__$INTERNAL$" name="npa" label="{i18n>NProAggr}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                <MultiComboBox  id="cbDescNProAggr"  value="{sRaggruppamento>/DESC_RAGGR}" items="{ path: 'sHelp>/T_AGGREG/ProgAggr', sorter: [{ path: 'DESC_RAGGR', descending: false, group:false }] }" > 
                                    <core:Item key="{sHelp>ProgAggr}" text="{sHelp>ProgAggr}"/>
                                </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="titoloAzioneAggregativo" visible="true" groupName="__$INTERNAL$" name="taa" label="{i18n>TitoloAzioneAggregativo1}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                <MultiComboBox id="cbTitoloAzioneAggregativo"  value="{sRaggruppamento>/DESC_RAGGR}" items="{ path: 'sHelp>/T_AGGREG/AggrActTitle', sorter: [{ path: 'DESC_RAGGR', descending: false, group:false }] }" > 
                                    <core:Item key="{sHelp>AggrActTitle}" text="{sHelp>AggrActTitle}"/>
                                </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="componenteAzioneAggregativo" visible="true" groupName="__$INTERNAL$" name="caa" label="{i18n>ComponenteAzioneAggregativo1}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                               <MultiComboBox id="cbComponenteAzioneAggregativo" value="{sRaggruppamento>/DESC_RAGGR}" items="{ path: 'sHelp>/T_AGGREG/AggrActComponent', sorter: [{ path: 'DESC_RAGGR', descending: false, group:false }] }" > 
                                    <core:Item key="{sHelp>AggrActComponent}" text="{sHelp>AggrActComponent}"/>
                                </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                        </fb:filterGroupItems>
                    </fb:FilterBar>
                    <OverflowToolbar class="sapUiSmallMarginTop" style="Clear">
                      <ToolbarSpacer/>
                      <Button text="Scarica" icon="sap-icon://download" press="onDataExport" class="sapUiTinyMarginBegin"/>
                      <Button text="Carica"  icon="sap-icon://upload" press="handleUploadPiani" class="sapUiTinyMarginBegin"/>
                      <Button text="Colonne" icon="sap-icon://action-settings" press="onPersoButtonPressed" class="sapUiTinyMarginBegin"/>
                    </OverflowToolbar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <ScrollContainer width="100%" height="100%" vertical="true" horizontal="true" >
                <Table id="tbTabellaAggregazioniAzioniTipo" items="{path: 'T_AGGREG>/'}"  mode="MultiSelect" sticky="HeaderToolbar,ColumnHeaders" selectionChange="onSelectRow">
                  <columns>
                        <Column width="15em" id="col51" app:property="Werks"><Text text="{i18n>Divisione}"/></Column>
                        <Column width="15em" id="col52" app:property="Sistema"><Text text="{i18n>Sistema}"/></Column>
                        <Column width="15em" id="col53" app:property="Classe"><Text text="{i18n>Classe}"/></Column>
                        <Column width="15em" id="col54" app:property="ProgAggr"><Text text="{i18n>NProAggr}"/></Column>
                        <Column width="15em" id="col55" app:property="AggrActTitle"><Text text="{i18n>TitoloAzioneAggregativo1}"/></Column>
                        <Column width="15em" id="col56" app:property="AggrActComponent"><Text text="{i18n>ComponenteAzioneAggregativo1}"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle" type="Active" press="onPressLine">
                            <cells>
                                <Text text="{T_AGGREG>Werks}"/>
                                <Text text="{T_AGGREG>Sistema}"/>
                                <Text text="{T_AGGREG>Classe}"/>
                                <Text text="{T_AGGREG>ProgAggr}"/>
                                <Text text="{T_AGGREG>AggrActTitle}"/>
                                <Text text="{T_AGGREG>AggrActComponent}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
             </ScrollContainer>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>

    <f:DynamicPage id="Detail" preserveHeaderStateOnScroll="true" showFooter="false" fitContent="true" class="sapUiContentPadding" >
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                 <HBox height="100%" alignItems="Center" alignContent="Center" justifyContent="Center">
                        <Button type="Transparent" icon="sap-icon://nav-back"  press="onBackDetail" class="sapUiSmallMarginEnd"></Button>
                        <Title title="{i18n>editPage}"  id="TitleDetail"  class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:content>
                <f:actions></f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://save" press="onSave" text="{i18n>Salva}"/>
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                 
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
       
          <form:Form id="FormToolbar"
          editable="true"
          ariaLabelledBy="Title1">
          <form:toolbar>
            <Toolbar id="TB1">
              <Title text="{i18n>editPage2}"/>
            </Toolbar>
          </form:toolbar>
          <form:layout>
          <form:ResponsiveGridLayout
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false" />
          </form:layout>
          <form:formContainers>
            <form:FormContainer ariaLabelledBy="Title2">
              <form:formElements>
                <form:FormElement label="{i18n>Divisione}">
                  <form:fields>
                  <ComboBox value="{sDetail>/Werks}" enabled="{oDataModel>/Enabled}"  items="{ path: 'sHelp>/H_T001W_C/DIVISIONENew', sorter: [{ path: '', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Fieldname1}" text="{sHelp>Fieldname1}"/>
                   </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>Sistema}" >
                  <form:fields>
                  <ComboBox value="{sDetail>/Sistema}" enabled="{oDataModel>/Enabled}" items="{ path: 'sHelp>/T_ACT_SYST/SISTEMANew', sorter: [{ path: '', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Sistema}" text="{sHelp>Sistema}"/>
                   </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>Classe}">
                  <form:fields>
                  <ComboBox value="{sDetail>/Classe}" enabled="{oDataModel>/Enabled}" items="{ path: 'sHelp>/T_ACT_CLAS/SISTEMANew', sorter: [{ path: '', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Classe}" text="{sHelp>Classe}"/>
                   </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>NProAggr}">
                  <form:fields>
                  <ComboBox value="{sDetail>/ProgAggr}" enabled="{oDataModel>/Enabled}" items="{ path: 'sHelp>/T_AGGREG/ProgAggr', sorter: [{ path: '', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>ProgAggr}" text="{sHelp>ProgAggr}"/>
                   </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>TitoloAzioneAggregativo1}">
                <ComboBox value="{sDetail>/AggrActTitle}"  items="{ path: 'sHelp>/T_AGGREG/AggrActTitle', sorter: [{ path: '', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>AggrActTitle}" text="{sHelp>AggrActTitle}"/>
                   </ComboBox>
                </form:FormElement>
                <form:FormElement label="{i18n>ComponenteAzioneAggregativo1}">
                <ComboBox value="{sDetail>/AggrActComponent}"  items="{ path: 'sHelp>/T_AGGREG/AggrActComponent', sorter: [{ path: '', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>AggrActComponent}" text="{sHelp>AggrActComponent}"/>
                   </ComboBox>
                </form:FormElement>
              </form:formElements>
            </form:FormContainer>
          </form:formContainers>
        </form:Form>
        </f:content>
    </f:DynamicPage>
  </NavContainer>
</mvc:View>
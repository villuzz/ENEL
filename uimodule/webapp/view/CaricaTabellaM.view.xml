<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout" xmlns:ui="sap.ui.table" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" controllerName="PM030.APP1.controller.CaricaTabellaM">
<NavContainer
			id="navCon"
			class="navContainerControl sapUiSmallMarginBottom">
    <f:DynamicPage id="dynamicPageId" preserveHeaderStateOnScroll="true" showFooter="false" fitContent="true" class="sapUiContentPadding" >
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                    <HBox height="100%" alignItems="Center" alignContent="Center" justifyContent="Center">
                         <Button type="Emphasized" text="Home"  press="onBack" class="sapUiSmallMarginEnd"/>
                        <Title text="{i18n>TitoloCTZTPM}" class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:content>
                <f:actions></f:actions>
               <f:navigationActions>
                    <Button text="Nuovo"  icon="sap-icon://document" press="onNuovo" class="sapUiTinyMarginBegin"/>
                    <Button text="Modifica" icon="sap-icon://edit" press="onModify" class="sapUiTinyMarginBegin"/>
                    <Button text="Copia"  icon="sap-icon://copy" press="onCopy" class="sapUiTinyMarginBegin"/>
                    <Button text="Cancella" icon="sap-icon://delete" press="onCancel" class="sapUiTinyMarginBegin"/>   
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar id="filterbarPiste" useToolbar="false" search="onSearchResult" showRestoreButton="true" showClearButton="true">
                        <fb:filterGroupItems>
                            
                            <fb:FilterGroupItem id="Azione" visible="true" groupName="__$INTERNAL$" name="ind" label="{i18n>Azione}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                    <!-- <Input type="Number" value="{FilterModel>/Azione}" maxLength="12"/> -->
                                      <MultiComboBox id="cbAzione"  items="{ path: 'sHelp>/T_PMO_M/Azione'}" > 
                                    <core:Item key="{sHelp>IndexPmo}" text="{sHelp>IndexPmo}"/>
                                </MultiComboBox> 
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="materiale" visible="true" groupName="__$INTERNAL$" name="mat" label="{i18n>Materiale}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                    <!-- <Input type="Text" value="{FilterModel>/Materiale}" maxLength="18"/> -->
                                  <MultiComboBox id="cbMateriale"  items="{ path: 'sHelp>/T_PMO_M/Materiale' }" > 
                                    <core:Item key="{sHelp>Matnr}" text="{sHelp>Matnr}"/>
                                </MultiComboBox> 
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="divisione" visible="true" groupName="__$INTERNAL$" name="div" label="{i18n>Divisione}" partOfCurrentVariant="true" visibleInFilterBar="true">
                              <fb:control>
                                <!-- <Input type="Text" value="{FilterModel>/Divisione}" maxLength="4"/> -->
                                  <MultiComboBox id="cbDivisione"  items="{ path: 'sHelp>/T_PMO_M/Divisione' }" > 
                                    <core:Item key="{sHelp>}" text="{sHelp>Werks}"/>
                                </MultiComboBox> 
                              </fb:control>
                            </fb:FilterGroupItem>

                        </fb:filterGroupItems>
                    </fb:FilterBar>
                     <OverflowToolbar class="sapUiSmallMarginTop" style="Clear">
                      <ToolbarSpacer/>
                      <Button text="Scarica" icon="sap-icon://download" press="onDataExport" class="sapUiTinyMarginBegin"/>
                      <Button text="Carica"  icon="sap-icon://upload" press="handleUploadPiani" class="sapUiTinyMarginBegin"/>
                      <Button text="Colonne" icon="sap-icon://action-settings" press="onPersoButtonPressed" class="sapUiTinyMarginBegin"/>
                    </OverflowToolbar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <ScrollContainer width="100%" height="100%" vertical="true" horizontal="true" >
                <Table id="tbCaricaTabellaM" items="{path: 'T_PMO_M>/'}"  mode="MultiSelect" sticky="HeaderToolbar,ColumnHeaders" selectionChange="onSelectRow">
                  <columns>
                        <Column width="15em" id="col91" app:property="IndexPmo"><Text text="{i18n>Azione}"/></Column>
                        <Column width="15em" id="col92" app:property="Matnr"><Text text="{i18n>Materiale}"/></Column>
                        <Column width="15em" id="col93" app:property="Maktx"><Text text="{i18n>TestoBreveMat}"/></Column>
                        <Column width="15em" id="col94" app:property="Menge"><Text text="{i18n>QuantFabbisogno}"/></Column>
                        <Column width="15em" id="col95" app:property="Meins" ><Text text="{i18n>Unita}"/></Column>
                        <Column width="15em" id="col96" app:property="Lgort"><Text text="{i18n>Magazzino}"/></Column>
                        <Column width="15em" id="col97" app:property="Werks"><Text text="{i18n>Divisione}"/></Column>
                        <Column width="15em" id="col98" app:property="Charg"><Text text="{i18n>Partita}"/></Column>
                        <Column width="15em" id="col99" app:property="Tbtwr"><Text text="{i18n>PrezzoLordo}"/></Column>
                        <Column width="15em" id="col100" app:property="Waers"><Text text="{i18n>Divisa}"/></Column>
                        <Column width="15em" id="col101" app:property="Ekgrp"><Text text="{i18n>GrupAcq}"/></Column>
                        <Column width="15em" id="col102" app:property="Ekorg"><Text text="{i18n>OrgAcq}"/></Column>
                        <Column width="15em" id="col103" app:property="Afnam"><Text text="{i18n>Richiedente}"/></Column>
                        <Column width="15em" id="col104" app:property="Matkl"><Text text="{i18n>GrupMerci}"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle" type="Active" press="onPressLine">
                            <cells>
                                <Text text="{T_PMO_M>IndexPmo}"/>
                                <Text text="{T_PMO_M>Matnr}"/>
                                <Text text="{T_PMO_M>Maktx}"/>
                                <Text text="{T_PMO_M>Menge}"/>
                                <Text text="{T_PMO_M>Meins}"/>
                                <Text text="{T_PMO_M>Lgort}"/>
                                <Text text="{T_PMO_M>Werks}"/>
                                <Text text="{T_PMO_M>Charg}"/>
                                <Text text="{T_PMO_M>Tbtwr}"/>
                                <Text text="{T_PMO_M>Waers}"/>
                                <Text text="{T_PMO_M>Ekgrp}"/>
                                <Text text="{T_PMO_M>Ekorg}"/>
                                <Text text="{T_PMO_M>Afnam}"/>
                                <Text text="{T_PMO_M>Matkl}"/>                                  
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
             </ScrollContainer>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
  
    <f:DynamicPage id="Detail" preserveHeaderStateOnScroll="true" showFooter="false" fitContent="true" class="sapUiContentPadding" >
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                 <HBox height="100%" alignItems="Center" alignContent="Center" justifyContent="Center">
                        <Button type="Transparent" icon="sap-icon://nav-back"  press="onBackDetail" class="sapUiSmallMarginEnd"></Button>
                        <Title title="{i18n>editPage}"  id="TitleDetail"  class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:content>
                <f:actions></f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://save" press="onSave" text="{i18n>Salva}"/>
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                 
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <form:Form id="FormToolbar"
          editable="true"
          ariaLabelledBy="Title1">
          <form:toolbar>
            <Toolbar id="TB1">
              <Title text="{i18n>editPage2}"/>
            </Toolbar>
          </form:toolbar>
          <form:layout>
          <form:ResponsiveGridLayout
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false" />
          </form:layout>
          <form:formContainers>
            <form:FormContainer ariaLabelledBy="Title2">
              <form:formElements>
                <form:FormElement label="{i18n>IndexAzioni}">
                  <form:fields>
                    <!-- <Input value="{mManutenzione>IndexAzioni}" type="Number" maxLength="12"/> -->
                    <ComboBox  value="{sDetail>/IndexPmo}" enabled="{oDataModel>/Enabled}" items="{ path: 'sHelp>/T_PMO_M/IndexPmo' }" >
                   <core:Item key="{sHelp>IndexPmo}" text="{sHelp>IndexPmo}"/>
                  </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>Materiale}" >
                  <form:fields>
                  <Input showSuggestion="true" value="{sDetail>/Matnr}" suggestionRows="{sHelp>/Matnr}" suggest=".onSuggestMatnr" >
                                 <suggestionColumns>
                                          <Column>
                                            <Label text="{i18n>Materiale}" />
                                          </Column>
                                          
                                        </suggestionColumns>
                                        <suggestionRows>
                                          <ColumnListItem>
                                            <Label text="{sHelp>Fieldname1}" />
                                          </ColumnListItem>
                                  </suggestionRows>
                    </Input>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>TestoBreveMat}">
                  <form:fields>
                    <Input value="{sDetail>/Maktx}" enabled="{oDataModel>/Enabled}" type="Text" maxLength="40"/>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>QuantFabbisogno}">
                  <form:fields>
                    <Input value="{sDetail>/Menge}" type="Number" maxLength="13"/>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>Unita}">
                  <form:fields>
                    <Input value="{sDetail>/Meins}" type="Number" maxLength="3"/>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>Magazzino}">
                  <Input value="{sDetail>/Lgort}" type="Text" maxLength="4"/>
                </form:FormElement>
                <form:FormElement label="{i18n>Divisione}">
                  <!-- <Input value="{sDetail>Divisione}" type="Text" maxLength="4"/> -->
                  <ComboBox  value="{sDetail>/Werks}" enabled="{oDataModel>/Enabled}" items="{ path: 'sHelp>/T_PMO_M/Werks' }" >
                   <core:Item key="{sHelp>Werks}" text="{sHelp>Werks}"/>
                  </ComboBox>
                </form:FormElement>
                <form:FormElement label="{i18n>Partita}">
                  <Input value="{sDetail>/Charg}" type="Text" maxLength="10"/>
                </form:FormElement>
                <form:FormElement label="{i18n>PrezzoLordo}">
                  <Input value="{sDetail>/Tbtwr}" type="Number" maxLength="11"/>
                </form:FormElement>
                <form:FormElement label="{i18n>Divisa}">
                  <Input value="{sDetail>/Waers}" type="Text" maxLength="5"/>
                </form:FormElement>
                <form:FormElement label="{i18n>GrupAcq}">
                  <Input value="{sDetail>/Ekgrp}" type="Text" maxLength="3"/>
                </form:FormElement>
                <form:FormElement label="{i18n>OrgAcq}">
                  <Input value="{sDetail>/Ekorg}" type="Text" maxLength="4"/>
                </form:FormElement>
                <form:FormElement label="{i18n>Richiedente}">
                  <Input value="{sDetail>/Afnam}" type="Text" maxLength="12"/>
                </form:FormElement>
                <form:FormElement label="{i18n>GrupMerci}">
                  <Input value="{sDetail>/Matkl}" type="Text" maxLength="9"/>
                </form:FormElement>
              </form:formElements>
            </form:FormContainer>
          </form:formContainers>
        </form:Form>
        </f:content>
    </f:DynamicPage>
  </NavContainer>
</mvc:View>
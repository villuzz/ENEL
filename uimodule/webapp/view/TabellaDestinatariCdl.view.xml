<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout" xmlns:ui="sap.ui.table" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" controllerName="PM030.APP1.controller.TabellaDestinatariCdl">
<NavContainer
			id="navCon"
			class="navContainerControl sapUiSmallMarginBottom">
    <f:DynamicPage id="dynamicPageId" preserveHeaderStateOnScroll="true" showFooter="false" fitContent="true" class="sapUiContentPadding" >
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                    <HBox height="100%" alignItems="Center" alignContent="Center" justifyContent="Center">
                         <Button type="Emphasized" text="Home"  press="onBack" class="sapUiSmallMarginEnd"/>
                        <Title text="{i18n>TitoloTDC}" class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:content>
                <f:actions></f:actions>
                 <f:navigationActions>
                    <Button text="Nuovo"  icon="sap-icon://document" press="onNuovo" class="sapUiTinyMarginBegin"/>
                    <Button text="Modifica" icon="sap-icon://edit" press="onModify" class="sapUiTinyMarginBegin"/>
                    <Button text="Copia"  icon="sap-icon://copy" press="onCopy" class="sapUiTinyMarginBegin"/>
                    <Button text="Cancella" icon="sap-icon://delete" press="onCancel" class="sapUiTinyMarginBegin"/>   
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar id="filterbarPiste" useToolbar="false" search="onSearchResult" showRestoreButton="true" showClearButton="true">
                        <fb:filterGroupItems>

                            <fb:FilterGroupItem id="divisione" visible="true" groupName="__$INTERNAL$" name="div" label="{i18n>Divisione}" partOfCurrentVariant="true" visibleInFilterBar="true">
                              <fb:control>
                              <MultiComboBox id="cbDivisione"   items="{ path: 'sHelp>/T_DEST/Divisione', sorter: [{ path: 'T_DEST', descending: false, group:false }] }" > 
                                  <core:Item key="{sHelp>Werks}" text="{sHelp>Werks}" />
                              </MultiComboBox>
                              </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="centroDiLavoro" visible="true" groupName="__$INTERNAL$" name="cdl" label="{i18n>CentroDiLavoro}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                   <MultiComboBox id="cbCentroDiLavoro"    items="{ path: 'sHelp>/T_DEST/Arbpl', sorter: [{ path: 'T_DEST', descending: false, group:false }] }" > 
                                  <core:Item key="{sHelp>Arbpl}" text="{sHelp>Arbpl}" />
                                </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="destinatario" visible="true" groupName="__$INTERNAL$" name="dest" label="{i18n>Destinatario}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                 <MultiComboBox id="cbDestinatario"   items="{ path: 'sHelp>/T_DEST/Destinatario', sorter: [{ path: 'T_DEST', descending: false, group:false }] }" > 
                                  <core:Item key="{sHelp>Destinatario}" text="{sHelp>Destinatario}" />
                                </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="descrizioneDestinatario" visible="true" groupName="__$INTERNAL$" name="dd" label="{i18n>DescrizioneDestinatario}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                 <MultiComboBox id="cbDescrizioneDestinatario"  items="{ path: 'sHelp>/T_DEST/Txt', sorter: [{ path: 'T_DEST', descending: false, group:false }] }" > 
                                  <core:Item key="{sHelp>Txt}" text="{sHelp>Txt}" />
                                </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="raggruppamento" visible="true" groupName="__$INTERNAL$" name="ragg" label="{i18n>Raggruppamento}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                    <!-- <Input type="Text" value="{FilterModel>/Raggruppamento}" maxLength="10"/> -->
                                 <MultiComboBox id="cbRaggruppamento"  items="{ path: 'sHelp>/T_DEST/Raggruppamento', sorter: [{ path: 'T_DEST', descending: false, group:false }] }" > 
                                  <core:Item key="{sHelp>Raggruppamento}" text="{sHelp>Raggruppamento}" />
                                </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                        </fb:filterGroupItems>
                    </fb:FilterBar>
                    <OverflowToolbar class="sapUiSmallMarginTop" style="Clear">
                      <ToolbarSpacer/>
                      <Button text="Scarica" icon="sap-icon://download" press="onDataExport" class="sapUiTinyMarginBegin"/>
                      <Button text="Carica"  icon="sap-icon://upload" press="handleUploadPiani" class="sapUiTinyMarginBegin"/>
                      <Button text="Colonne" icon="sap-icon://action-settings" press="onPersoButtonPressed" class="sapUiTinyMarginBegin"/>
                    </OverflowToolbar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <ScrollContainer width="100%" height="100%" vertical="true" horizontal="true" >
                <Table id="tbTabellaDestinatariCdl" items="{path: 'T_DEST>/'}"  mode="MultiSelect" sticky="HeaderToolbar,ColumnHeaders" growing="true" growingThreshold="100" selectionChange="onSelectRow">
                  <columns>
                        <Column width="15em" id="col9" app:property="Werks"><Text text="{i18n>Divisione}"/></Column>
                        <Column width="15em" id="col10" app:property="Arbpl"><Text text="{i18n>CentroDiLavoro}"/></Column>
                        <Column width="15em" id="col11" app:property="Destinatario"><Text text="{i18n>Destinatario}"/></Column>
                        <Column width="15em" id="col12" app:property="Txt"><Text text="{i18n>DescrizioneDestinatario}"/></Column>
                        <Column width="15em" id="col13" app:property="Raggruppamento"><Text text="{i18n>Raggruppamento}"/></Column>
                        <Column width="15em" id="col14" app:property="Mail"><Text text="{i18n>Email}"/></Column>                            
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle" type="Active" press="onPressLine">
                            <cells>
                                <Text text="{T_DEST>Werks}"/>
                                <Text text="{T_DEST>Arbpl}"/>
                                <Text text="{T_DEST>Destinatario}"/>
                                <Text text="{T_DEST>Txt}"/>
                                <Text text="{T_DEST>Raggruppamento}"/>
                                <Text text="{T_DEST>Mail}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
             </ScrollContainer>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </f:footer>
        <f:dependents>
      <core:Fragment fragmentName="PM030.APP1.view.fragment.UploadTable" type="XML"></core:Fragment>
    </f:dependents>
    </f:DynamicPage>
    <f:DynamicPage id="Detail" preserveHeaderStateOnScroll="true" showFooter="false" fitContent="true" class="sapUiContentPadding" >
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                 <HBox height="100%" alignItems="Center" alignContent="Center" justifyContent="Center">
                        <Button type="Transparent" icon="sap-icon://nav-back"  press="onBackDetail" class="sapUiSmallMarginEnd"></Button>
                        <Title title="{i18n>editPage}"  id="TitleDetail"  class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:content>
                <f:actions></f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://save" press="onSave" text="{i18n>Salva}"/>
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                 
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
      <form:Form id="FormToolbar"
          editable="true"
          ariaLabelledBy="Title1">
          <form:toolbar>
            <Toolbar id="TB1">
              <Title text="{i18n>editPage2}"/>
            </Toolbar>
          </form:toolbar>
          <form:layout>
          <form:ResponsiveGridLayout
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false" />
          </form:layout>
          <form:formContainers>
            <form:FormContainer ariaLabelledBy="Title2">
              <form:formElements>
                <form:FormElement label="{i18n>Divisione}">
                  <form:fields>
                  <ComboBox  value="{sDetail>/Werks}" enabled="{oDataModel>/Enabled}" items="{ path: 'sHelp>/T001W/DivisioneNew', sorter: [{ path: 'DIVISIONENew', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Fieldname1}" text="{sHelp>Fieldname1}"/>
                   </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>CentroDiLavoro}" >
                  <form:fields>
                  <ComboBox  value="{sDetail>/Arbpl}" enabled="{oDataModel>/Enabled}" items="{ path: '', sorter: [{ path: '', descending: false, group:false }] }" >
                   <core:Item key="{}" text="{}"/>
                   </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>Destinatario}">
                  <form:fields>
                  <ComboBox  value="{sDetail>/Destinatario}" enabled="{oDataModel>/Enabled}" items="{ path: 'sHelp>/T_DEST/Destinatario', sorter: [{ path: 'T_DEST', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Destinatario}" text="{sHelp>Destinatario}"/>
                   </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>DescrizioneDestinatario}">
                  <ComboBox  value="{sDetail>/Txt}"  items="{ path: 'sHelp>/T_DEST/Txt', sorter: [{ path: 'T_DEST', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Txt}" text="{sHelp>Txt}"/>
                   </ComboBox>
                </form:FormElement>
                <form:FormElement label="{i18n>Raggruppamento}">
                  <form:fields>
                  <ComboBox  value="{sDetail>/Raggruppamento}"  items="{ path: 'sHelp>/ZPM4R_H_RAG/RAGGRUPPAMENTO', sorter: [{ path: 'T_DEST', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Fieldname1}" text="{sHelp>Fieldname1}"/>
                   </ComboBox>
                  </form:fields>
                </form:FormElement>
                 <form:FormElement label="{i18n>Email}">
                   <Input  value="{sDetail>/Mail}"  items="{ path: 'sHelp>/T_DEST', sorter: [{ path: 'T_DEST', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Mail}" text="{sHelp>Mail}"/>
                   </Input>
                </form:FormElement>
              </form:formElements>
            </form:FormContainer>
          </form:formContainers>
        </form:Form>
        
        </f:content>
    </f:DynamicPage>

  </NavContainer>
</mvc:View>
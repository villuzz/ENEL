<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout" xmlns:ui="sap.ui.table" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" controllerName="PM030.APP1.controller.CaricaTabellaS">
<NavContainer
			id="navCon"
			class="navContainerControl sapUiSmallMarginBottom">
    <f:DynamicPage id="dynamicPageId" preserveHeaderStateOnScroll="true" showFooter="false" fitContent="true" class="sapUiContentPadding" >
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                    <HBox height="100%" alignItems="Center" alignContent="Center" justifyContent="Center">
                        <Title text="{i18n>TitoloCTZTPS}" class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:content>
                <f:actions></f:actions>
                <f:navigationActions>
                    <Button press="handleNav" class="sapUiTinyMarginBegin" text="{i18n>Modifica}" enabled="{tabCheckModel>/editEnabled}">
                      <layoutData>
                        <FlexItemData growFactor="1" />
                      </layoutData>
                      <customData>
                        <core:CustomData
                          key="target"
                          value="p1" />
                      </customData>
			              </Button>
                    <Button icon="sap-icon://action-settings" press="onPersoButtonPressed" class="sapUiTinyMarginBegin"/>
                    <Button icon="sap-icon://upload" press="handleUploadPiani" class="sapUiTinyMarginBegin"/>
                    <Button icon="sap-icon://download" press="onDataExport" class="sapUiTinyMarginBegin"/>
                    <Button icon="sap-icon://home" press="onBack" class="sapUiTinyMarginBegin" tooltip="{i18n>TitoloGTA}"/>
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar id="filterbarPiste" useToolbar="false" search="onSearchResult" showRestoreButton="true" showClearButton="true">
                        <fb:filterGroupItems>

                            <fb:FilterGroupItem id="Azione" visible="true" groupName="__$INTERNAL$" name="ind" label="{i18n>Azione}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                    <Input type="Number" value="{FilterModel>/IndexAzioni}" maxLength="12"/>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="nAttivita" visible="true" groupName="__$INTERNAL$" name="na" label="{i18n>NAttivita}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                    <Input type="Text" value="{FilterModel>/NAttivita}" maxLength="18"/>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="divisa" visible="true" groupName="__$INTERNAL$" name="di" label="{i18n>Divisa}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                    <Input type="Text" value="{FilterModel>/Divisa}" maxLength="5"/>
                                </fb:control>
                            </fb:FilterGroupItem>

                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <ScrollContainer width="100%" height="100%" vertical="true" horizontal="true" >
                <Table id="tbCaricaTabellaS" items="{path: 'T_PMO_S>/'}"  mode="MultiSelect" sticky="HeaderToolbar,ColumnHeaders" selectionChange="onSelectRow">
                  <columns>
                        <Column width="15em" id="col105" app:property="Azione"><Text text="{i18n>Azione}"/></Column>
                        <Column width="15em" id="col106" app:property="NAttivita"><Text text="{i18n>NAttivita}"/></Column>
                        <Column width="15em" id="col108" app:property="TestoBreveServizio"><Text text="{i18n>TestoBreveServizio}"/></Column>
                        <Column width="15em" id="col109" app:property="Qta"><Text text="{i18n>Qta}"/></Column>
                        <Column width="15em" id="col110" app:property="Unita"><Text text="{i18n>Unita}"/></Column>
                        <Column width="15em" id="col111" app:property="PrezzoLordo"><Text text="{i18n>PrezzoLordo}"/></Column>
                        <Column width="15em" id="col112" app:property="Divisa"><Text text="{i18n>Divisa}"/></Column>
                        <Column width="15em" id="col113" app:property="GrupAcq"><Text text="{i18n>GrupAcq}"/></Column>
                        <Column width="15em" id="col114" app:property="OrgAcq"><Text text="{i18n>OrgAcq}"/></Column>
                        <Column width="15em" id="col115" app:property="Richiedente"><Text text="{i18n>Richiedente}"/></Column>
                        <Column width="15em" id="col116" app:property="GrupMerci"><Text text="{i18n>GrupMerci}"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle" type="Active" press="onPressLine">
                            <cells>
                                <Text text="{mManutenzione>Azione}"/>
                                <Text text="{mManutenzione>NAttivita}"/>
                                <Text text="{mManutenzione>TestoBreveServizio}"/>
                                <Text text="{mManutenzione>Qta}"/>
                                <Text text="{mManutenzione>Unita}"/>
                                <Text text="{mManutenzione>PrezzoLordo}"/>
                                <Text text="{mManutenzione>Divisa}"/>
                                <Text text="{mManutenzione>GrupAcq}"/>
                                <Text text="{mManutenzione>OrgAcq}"/>
                                <Text text="{mManutenzione>Richiedente}"/>
                                <Text text="{mManutenzione>GrupMerci}"/>                                  
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
             </ScrollContainer>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
    <Page
			id="p1"
			title="{i18n>editPage}" showNavButton="true" navButtonPress="handleNav">
      <VBox class="sapUiSmallMargin">
        <form:Form id="FormToolbar"
          editable="true"
          ariaLabelledBy="Title1">
          <form:toolbar>
            <Toolbar id="TB1">
              <Title text="{i18n>editPage2}"/>
            </Toolbar>
          </form:toolbar>
          <form:layout>
          <form:ResponsiveGridLayout
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false" />
          </form:layout>
          <form:formContainers>
            <form:FormContainer ariaLabelledBy="Title2">
              <form:formElements>
                <form:FormElement label="{i18n>IndexAzioni}">
                  <form:fields>
                    <Input value="{mManutenzione>IndexAzioni}" type="Number" maxLength="12"/>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>NAttivita}" >
                  <form:fields>
                    <Input value="{mManutenzione>NAttivita}" type="Text" maxLength="18"/>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>TestoBreveServizio}">
                  <form:fields>
                    <Input value="{mManutenzione>TestoBreveServizio}" type="Text" maxLength="40"/>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>Qta}">
                  <form:fields>
                    <Input value="{mManutenzione>Qta}" type="Number" maxLength="13"/>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>Unita}">
                  <Input value="{mManutenzione>Unita}" type="Number" maxLength="3"/>
                </form:FormElement>
                <form:FormElement label="{i18n>PrezzoLordo}">
                  <Input value="{mManutenzione>PrezzoLordo}" type="Number" maxLength="11"/>
                </form:FormElement>
                <form:FormElement label="{i18n>Divisa}">
                  <Input value="{mManutenzione>Divisa}" type="Text" maxLength="5"/>
                </form:FormElement>
                <form:FormElement label="{i18n>GrupAcq}">
                  <Input value="{mManutenzione>GrupAcq}" type="Text" maxLength="3"/>
                </form:FormElement>
                <form:FormElement label="{i18n>OrgAcq}">
                  <Input value="{mManutenzione>OrgAcq}" type="Text" maxLength="4"/>
                </form:FormElement>
                <form:FormElement label="{i18n>Richiedente}">
                  <Input value="{mManutenzione>Richiedente}" type="Text" maxLength="12"/>
                </form:FormElement>
                <form:FormElement label="{i18n>GrupMerci}">
                  <Input value="{mManutenzione>GrupMerci}" type="Text" maxLength="9"/>
                </form:FormElement>
              </form:formElements>
            </form:FormContainer>
          </form:formContainers>
        </form:Form>
            <Toolbar>
              	<ToolbarSpacer/>
                  <Button icon="sap-icon://save" press="onSave" class="sapUiTinyMarginBegin" tooltip="{i18n>Salva}" width="auto" text="{i18n>Salva}" enabled="{tabCheckModel>/editEnabled}"/>
				        <ToolbarSpacer/> 
            </Toolbar>
        </VBox>
		</Page>
  </NavContainer>
</mvc:View>
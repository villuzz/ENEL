<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout" xmlns:ui="sap.ui.table" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" controllerName="PM030.APP1.controller.TabellaRaggruppamento">
<NavContainer
			id="navCon"
			class="navContainerControl sapUiSmallMarginBottom">
    <f:DynamicPage id="dynamicPageId" preserveHeaderStateOnScroll="true" showFooter="false" fitContent="true" class="sapUiContentPadding" >
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                     <HBox height="100%" alignItems="Center" alignContent="Center" justifyContent="Center">
                         <Button type="Emphasized" text="Home"  press="onBack" class="sapUiSmallMarginEnd"/>
                        <Title text="{i18n>TitoloTR}" class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:content>
                <f:actions></f:actions>
                 <f:navigationActions>
                    <Button text="Nuovo"  icon="sap-icon://document" press="onNuovo" class="sapUiTinyMarginBegin"/>
                    <Button text="Modifica" icon="sap-icon://edit" press="onModify" class="sapUiTinyMarginBegin"/>
                    <Button text="Copia"  icon="sap-icon://copy" press="onCopy" class="sapUiTinyMarginBegin"/>
                    <Button text="Cancella" icon="sap-icon://delete" press="onCancel" class="sapUiTinyMarginBegin"/>   
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar id="filterbarPiste" useToolbar="false" search="onSearchResult" showRestoreButton="true" showClearButton="true">
                        <fb:filterGroupItems>

                            <fb:FilterGroupItem id="Divisione" visible="true" groupName="__$INTERNAL$" name="Divisione" label="{i18n>Divisione}" partOfCurrentVariant="true" visibleInFilterBar="true">
                              <fb:control>
                                <MultiComboBox selectedKeys="{sFilter>/Divisione}" items="{ path: 'sHelp>/Divisione', sorter: [{ path: 'Divisione', descending: false, group:false }] }" > 
                                  <core:Item key="{sHelp>Divisione}" text="{sHelp>Divisione}"/>
                                </MultiComboBox>
                              </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="Raggruppamento" visible="true" groupName="__$INTERNAL$" name="Raggruppamento" label="{i18n>Raggruppamento}" partOfCurrentVariant="true" visibleInFilterBar="true">
                              <fb:control>
                                <MultiComboBox selectedKeys="{sFilter>/Raggruppamento}" items="{ path: 'sHelp>/Raggruppamento', sorter: [{ path: 'Raggruppamento', descending: false, group:false }] }" > 
                                  <core:Item key="{sHelp>Raggruppamento}" text="{sHelp>Raggruppamento}"/>
                                </MultiComboBox>
                              </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="DescRaggr" visible="true" groupName="__$INTERNAL$" name="DescRaggr" label="{i18n>DescRaggr}" partOfCurrentVariant="true" visibleInFilterBar="true">
                              <fb:control>
                                <MultiComboBox selectedKeys="{sFilter>/DescRaggr}" items="{ path: 'sHelp>/DescRaggr', sorter: [{ path: 'DescRaggr', descending: false, group:false }] }" > 
                                  <core:Item key="{sHelp>DescRaggr}" text="{sHelp>DescRaggr}"/>
                                </MultiComboBox>
                              </fb:control>
                            </fb:FilterGroupItem>

                        </fb:filterGroupItems>
                    </fb:FilterBar>
                      <OverflowToolbar class="sapUiSmallMarginTop" style="Clear">
                      <Button type="Default" tooltip="List" text="{i18n>ListVar}" icon="sap-icon://activity-items" press="onListVariant"/>
                      <Button type="Default" tooltip="Save" text="{i18n>SalvaVar}" icon="sap-icon://save" press="onPressVariant"/>
                      <ToolbarSpacer/>
                      <Button text="Scarica" icon="sap-icon://download" press="onDataExport" class="sapUiTinyMarginBegin"/>
                      <Button text="Carica"  icon="sap-icon://upload" press="handleUploadPiani" class="sapUiTinyMarginBegin"/>
                      <Button text="Colonne" icon="sap-icon://action-settings" press="onPersoButtonPressed" class="sapUiTinyMarginBegin"/>
                    </OverflowToolbar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <ScrollContainer width="100%" height="100%" vertical="true" horizontal="true" >
                <Table id="tbRaggruppamento" items="{ path: 'T_RAGGR>/', sorter: [{ path: 'Divisione', descending: false, group:false }] }"   mode="MultiSelect" sticky="HeaderToolbar,ColumnHeaders" selectionChange="onSelectRow">
                  <columns>
                        <Column width="15em" id="col6" app:property="Divisione"><Text text="{i18n>Divisione}"/></Column>
                        <Column width="15em" id="col7" app:property="Raggruppamento"><Text text="{i18n>Raggruppamento}"/></Column>
                        <Column width="15em" id="col8" app:property="DescRaggr"><Text text="{i18n>DescrizioneRaggruppamento}"/></Column>                        
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle" type="Active" press="onPressLine">
                            <cells>
                                <Text text="{T_RAGGR>Divisione}"/>
                                <Text text="{T_RAGGR>Raggruppamento}"/>
                                <Text text="{T_RAGGR>DescRaggr}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
             </ScrollContainer>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </f:footer>
         <f:dependents>
      <core:Fragment fragmentName="PM030.APP1.view.fragment.UploadTable" type="XML"></core:Fragment>
          <core:Fragment fragmentName="PM030.APP1.view.fragment.Variant" type="XML"></core:Fragment>
          <core:Fragment fragmentName="PM030.APP1.view.fragment.SaveVariant" type="XML"></core:Fragment>
        </f:dependents>
    </f:DynamicPage>

<f:DynamicPage id="Detail" preserveHeaderStateOnScroll="true" showFooter="false" fitContent="true" class="sapUiContentPadding" >
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                 <HBox height="100%" alignItems="Center" alignContent="Center" justifyContent="Center">
                        <Button type="Transparent" icon="sap-icon://nav-back"  press="onBackDetail" class="sapUiSmallMarginEnd"></Button>
                        <Title title="{i18n>editPage}"  id="TitleDetail"  class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:content>
                <f:actions></f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://save" press="onSave" text="{i18n>Salva}"/>
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                 
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
       <form:Form id="FormToolbar"
          editable="true"
          ariaLabelledBy="Title1">
          <form:toolbar>
            <Toolbar id="TB1">
              <Title text="{i18n>editPage2}"/>
            </Toolbar>
          </form:toolbar>
          <form:layout>
          <form:ResponsiveGridLayout
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false" />
          </form:layout>
          <form:formContainers>
            <form:FormContainer ariaLabelledBy="Title2">
              <form:formElements>
                <form:FormElement label="{i18n>Divisione}">
                  <form:fields>
                  <ComboBox change="handleChangeCb" valueStateText="{i18n>valueState} {i18n>Divisione}" showSecondaryValues= "true" items="{ path: 'sHelp>/DIVISIONE', length:4000 }" selectedKey="{sSelect>/Divisione}">
                      <core:ListItem key="{sHelp>Fieldname1}" text="{sHelp>Fieldname1}" additionalText="{sHelp>Fieldname2}"/>
                    </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>Raggruppamento}" >
                  <form:fields>
                   <Input  value="{sSelect>/Raggruppamento}" />
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>DescrizioneRaggruppamento}">
                  <form:fields>
                    <Input value="{sSelect>/DescRaggr}"/>
                  </form:fields>
                </form:FormElement>
              </form:formElements>
            </form:FormContainer>
          </form:formContainers>
        </form:Form>
        
        </f:content>
    </f:DynamicPage>


  </NavContainer>
</mvc:View>
<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout" xmlns:ui="sap.ui.table" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" controllerName="PM030.APP1.controller.DefinizioneAttivitaDiManutenzione">
<NavContainer
			id="navCon"
			class="navContainerControl sapUiSmallMarginBottom">
    <f:DynamicPage id="dynamicPageId" preserveHeaderStateOnScroll="true" showFooter="false" fitContent="true" class="sapUiContentPadding" >
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                      <HBox height="100%" alignItems="Center" alignContent="Center" justifyContent="Center">
                         <Button type="Emphasized" text="Home"  press="onBack" class="sapUiSmallMarginEnd"/>
                        <Title text="{i18n>TitoloDADM}" class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:content>
                <f:actions></f:actions>
               <f:navigationActions>
                    <Button text="Nuovo"  icon="sap-icon://document" press="onNuovo" class="sapUiTinyMarginBegin"/>
                    <Button text="Modifica" icon="sap-icon://edit" press="onModify" class="sapUiTinyMarginBegin"/>
                    <Button text="Copia"  icon="sap-icon://copy" press="onCopy" class="sapUiTinyMarginBegin"/>
                    <Button text="Cancella" icon="sap-icon://delete" press="onCancel" class="sapUiTinyMarginBegin"/>   
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar id="filterbarPiste" useToolbar="false" search="onSearchResult" showRestoreButton="true" showClearButton="true">
                        <fb:filterGroupItems>

                            <fb:FilterGroupItem id="lingua" visible="true" groupName="__$INTERNAL$" name="lin" label="{i18n>Lingua}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                    <MultiComboBox  id="cbLingua" items="{ path: 'sHelp>/T_ATTPM/Lingua', sorter: [{ path: 'Lingua', descending: false, group:false }] }" > 
                                    <core:Item key="{sHelp>Spras}" text="{sHelp>Spras}"/>
                                </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="tPAttivitaPM" visible="true" groupName="__$INTERNAL$" name="tap" label="{i18n>TPAttivitaPM}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                    <MultiComboBox id="cbTPAttivitaPM"  items="{ path: 'sHelp>/T_ATTPM/TPAttivita', sorter: [{ path: 'TPAttivita', descending: false, group:false }] }" > 
                                    <core:Item key="{sHelp>Ilart}" text="{sHelp>Ilart}"/>
                                </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="descrizioneTPAttivitaPM" visible="true" groupName="__$INTERNAL$" name="dtpp" label="{i18n>DescrizioneTPAttivitaPM}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                    <MultiComboBox id="cbDescrizioneTPAttivitaPM"  items="{ path: 'sHelp>/T_ATTPM/DescrizioneTPAttivita', sorter: [{ path: 'DescrizioneTPAttivita', descending: false, group:false }] }" > 
                                    <core:Item key="{sHelp>Ilatx}" text="{sHelp>Ilatx}"/>
                                </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>

                        </fb:filterGroupItems>
                    </fb:FilterBar>
                     <OverflowToolbar class="sapUiSmallMarginTop" style="Clear">
                      <ToolbarSpacer/>
                      <Button text="Scarica" icon="sap-icon://download" press="onDataExport" class="sapUiTinyMarginBegin"/>
                      <Button text="Carica"  icon="sap-icon://upload" press="handleUploadPiani" class="sapUiTinyMarginBegin"/>
                      <Button text="Colonne" icon="sap-icon://action-settings" press="onPersoButtonPressed" class="sapUiTinyMarginBegin"/>
                    </OverflowToolbar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <ScrollContainer width="100%" height="100%" vertical="true" horizontal="true" >
                <Table id="tbDefinizioneAttivitaDiManutenzione" items="{path: 'T_ATTPM>/'}"  mode="MultiSelect" sticky="HeaderToolbar,ColumnHeaders" selectionChange="onSelectRow">
                  <columns>
                        <Column width="15em" id="col88" app:property="Spras"><Text text="{i18n>Lingua}"/></Column>
                        <Column width="15em" id="col89" app:property="Ilart"><Text text="{i18n>TPAttivitaPM}"/></Column>
                        <Column width="15em" id="col90" app:property="Ilatx"><Text text="{i18n>DescrizioneTPAttivitaPM}"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle" type="Active" press="onPressLine">
                            <cells>
                                <Text text="{T_ATTPM>Spras}"/>
                                <Text text="{T_ATTPM>Ilart}"/>
                                <Text text="{T_ATTPM>Ilatx}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
             </ScrollContainer>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </f:footer>
          <f:dependents>
      <core:Fragment fragmentName="PM030.APP1.view.fragment.UploadTable" type="XML"></core:Fragment>
    </f:dependents>
    </f:DynamicPage>

<f:DynamicPage id="Detail" preserveHeaderStateOnScroll="true" showFooter="false" fitContent="true" class="sapUiContentPadding" >
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                 <HBox height="100%" alignItems="Center" alignContent="Center" justifyContent="Center">
                        <Button type="Transparent" icon="sap-icon://nav-back"  press="onBackDetail" class="sapUiSmallMarginEnd"></Button>
                        <Title title="{i18n>editPage}"  id="TitleDetail"  class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:content>
                <f:actions></f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://save" press="onSave" text="{i18n>Salva}"/>
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                 
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
      
         <form:Form id="FormToolbar"
          editable="true"
          ariaLabelledBy="Title1">
          <form:toolbar>
            <Toolbar id="TB1">
              <Title text="{i18n>editPage2}"/>
            </Toolbar>
          </form:toolbar>
          <form:layout>
          <form:ResponsiveGridLayout
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false" />
          </form:layout>
          <form:formContainers>
            <form:FormContainer ariaLabelledBy="Title2">
              <form:formElements>
                <form:FormElement label="{i18n>Lingua}">
                  <form:fields>
                    <ComboBox  value="{sDetail>/Spras}" enabled="{oDataModel>/Enabled}" items="{ path: 'sHelp>/H_T002/Lingua', sorter: [{ path: 'SPRAS', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Fieldname1}" text="{sHelp>Fieldname1}"/>
                  </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>TPAttivitaPM}" >
                  <form:fields>
                    <ComboBox  value="{sDetail>/Ilart}" enabled="{oDataModel>/Enabled}" items="{ path: 'sHelp>/H_T350I/TPAttivita', sorter: [{ path: 'ILART', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Fieldname1}" text="{sHelp>Fieldname1}"/>
                  </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>DescrizioneTPAttivitaPM}">
                  <form:fields>
                    <ComboBox  value="{sDetail>/Ilatx}"  items="{ path: 'sHelp>/aRAGGRUPPAMENTO', sorter: [{ path: 'aRAGGRUPPAMENTO', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Raggruppamento}" text="{sHelp>Raggruppamento}"/>
                  </ComboBox>
                  </form:fields>
                </form:FormElement>
              </form:formElements>
            </form:FormContainer>
          </form:formContainers>
        </form:Form>
        </f:content>
    </f:DynamicPage>
  </NavContainer>
</mvc:View>
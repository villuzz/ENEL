<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout" xmlns:ui="sap.ui.table" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" controllerName="PM030.APP1.controller.TabellaTipoDiGestione">
<NavContainer
			id="navCon"
			class="navContainerControl sapUiSmallMarginBottom">
    <f:DynamicPage id="dynamicPageId" preserveHeaderStateOnScroll="true" showFooter="false" fitContent="true" class="sapUiContentPadding" >
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                    <HBox height="100%" alignItems="Center" alignContent="Center" justifyContent="Center">
                         <Button type="Emphasized" text="Home"  press="onBack" class="sapUiSmallMarginEnd"/>
                        <Title text="{i18n>TitoloTDG}" class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:content>
                <f:actions></f:actions>
                 <f:navigationActions>
                    <Button text="Nuovo"  icon="sap-icon://document" press="onNuovo" class="sapUiTinyMarginBegin"/>
                    <Button text="Modifica" icon="sap-icon://edit" press="onModify" class="sapUiTinyMarginBegin"/>
                    <Button text="Copia"  icon="sap-icon://copy" press="onCopy" class="sapUiTinyMarginBegin"/>
                    <Button text="Cancella" icon="sap-icon://delete" press="onCancel" class="sapUiTinyMarginBegin"/>   
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar id="filterbarPiste" useToolbar="false" search="onSearchResult" showRestoreButton="true" showClearButton="true">
                        <fb:filterGroupItems>

                        <fb:FilterGroupItem id="tipoGestione" visible="true" groupName="__$INTERNAL$" name="tg" label="{i18n>TipoGestione}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                <MultiComboBox id="cbTipoGestione"  items="{ path: 'sHelp>/T_TP_MAN/TipoGestione', sorter: [{ path: 'T_TP_MAN', descending: false, group:false }] }" > 
                                    <core:Item key="{sHelp>TipoGestione}" text="{sHelp>TipoGestione}"/>
                                </MultiComboBox>    
                                    <!-- <Input type="Text" value="{FilterModel>/TipoGestione}" maxLength="3"/> -->
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem id="divisione" visible="true" groupName="__$INTERNAL$" name="div" label="{i18n>Divisione}" partOfCurrentVariant="true" visibleInFilterBar="true">
                              <fb:control>
                                <MultiComboBox id="cbDivisione"  items="{ path: 'sHelp>/T_TP_MAN/Divisione', sorter: [{ path: 'T_TP_MAN', descending: false, group:false }] }" > 
                                    <core:Item key="{sHelp>Divisione}" text="{sHelp>Divisione}"/>
                                </MultiComboBox>                               
                                <!-- <Input type="Text" value="{FilterModel>/Divisione}" required="true" maxLength="4"/> -->
                              </fb:control>
                            </fb:FilterGroupItem>

                            

                            <fb:FilterGroupItem id="raggruppamento" visible="true" groupName="__$INTERNAL$" name="ragg" label="{i18n>Raggruppamento}" partOfCurrentVariant="true" visibleInFilterBar="true">
                                <fb:control>
                                <MultiComboBox id="cbRaggruppamento"  items="{ path: 'sHelp>/T_TP_MAN/Raggruppamento', sorter: [{ path: 'T_TP_MAN', descending: false, group:false }] }" > 
                                    <core:Item key="{sHelp>Raggruppamento}" text="{sHelp>Raggruppamento}"/>
                                </MultiComboBox>    
                                    <!-- <Input type="Text" value="{FilterModel>/Raggruppamento}" maxLength="80"/> -->
                                </fb:control>
                            </fb:FilterGroupItem>

                        </fb:filterGroupItems>
                    </fb:FilterBar>
                     <OverflowToolbar class="sapUiSmallMarginTop" style="Clear">
                      <ToolbarSpacer/>
                      <Button text="Scarica" icon="sap-icon://download" press="onDataExport" class="sapUiTinyMarginBegin"/>
                      <Button text="Carica"  icon="sap-icon://upload" press="handleUploadPiani" class="sapUiTinyMarginBegin"/>
                      <Button text="Colonne" icon="sap-icon://action-settings" press="onPersoButtonPressed" class="sapUiTinyMarginBegin"/>
                    </OverflowToolbar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <ScrollContainer width="100%" height="100%" vertical="true" horizontal="true" >
                <Table id="tbTabellaTipoDiGestione" growing="true" growingThreshold="100" items="{path: 'T_TP_MAN>/'}"  mode="MultiSelect" sticky="HeaderToolbar,ColumnHeaders" selectionChange="onSelectRow">
                  <columns>
                        <Column width="15em" id="col57" app:property="TipoGestione"><Text text="{i18n>TipoGestione}"/></Column>
                        <Column width="15em" id="col58" app:property="Divisione"><Text text="{i18n>Divisione}"/></Column>
                        <Column width="15em" id="col59" app:property="DesTipoGest"><Text text="{i18n>DescrizioneTipoGestione}"/></Column>
                        <Column width="15em" id="col60" app:property="Raggruppamento"><Text text="{i18n>Raggruppamento}"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle" type="Active" press="onPressLine">
                            <cells>
                                <Text text="{T_TP_MAN>TipoGestione}"/>
                                <Text text="{T_TP_MAN>Divisione}"/>
                                <Text text="{T_TP_MAN>DesTipoGest}"/>
                                <Text text="{T_TP_MAN>Raggruppamento}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
             </ScrollContainer>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>

<f:DynamicPage id="Detail" preserveHeaderStateOnScroll="true" showFooter="false" fitContent="true" class="sapUiContentPadding" >
        <f:title>
            <f:DynamicPageTitle>
                <f:content>
                 <HBox height="100%" alignItems="Center" alignContent="Center" justifyContent="Center">
                        <Button type="Transparent" icon="sap-icon://nav-back"  press="onBackDetail" class="sapUiSmallMarginEnd"></Button>
                        <Title title="{i18n>editPage}"  id="TitleDetail"  class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:content>
                <f:actions></f:actions>
                <f:navigationActions>
                    <Button icon="sap-icon://save" press="onSave" text="{i18n>Salva}"/>
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                 
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
    <form:Form id="FormToolbar"
          editable="true"
          ariaLabelledBy="Title1">
          <form:toolbar>
            <Toolbar id="TB1">
              <Title text="{i18n>editPage2}"/>
            </Toolbar>
          </form:toolbar>
          <form:layout>
          <form:ResponsiveGridLayout
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false" />
          </form:layout>
          <form:formContainers>
            <form:FormContainer ariaLabelledBy="Title2">
              <form:formElements>
                <form:FormElement label="{i18n>TipoGestione}">
                  <form:fields>
                    <!-- <Input value="{sDetail>/TipoGestione}" type="Text" maxLength="3"/> -->
                    <ComboBox  value="{sDetail>/TipoGestione}" items="{ path: 'sHelp>/T_TP_MAN/TipoGestione', sorter: [{ path: 'T_TP_MAN', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>TipoGestione}" text="{sHelp>TipoGestione}"/>
                   </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>Divisione}" >
                  <form:fields>
                    <!-- <Input value="{sDetail>/Divisione}" type="Text" maxLength="4"/> -->
                    <ComboBox  value="{sDetail>/Divisione}" items="{ path: 'sHelp>/T001W/DivisioneNew', sorter: [{ path: 'DIVISIONENew', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Fieldname1}" text="{sHelp>Fieldname1}"/>
                   </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>DescrizioneTipoGestione}">
                  <form:fields>
                    <!-- <Input value="{sDetail>/DesTipoGest}" type="Text" maxLength="40"/> -->
                    <ComboBox  value="{sDetail>/DesTipoGest}" items="{ path: 'sHelp>/aDESTINATARIO', sorter: [{ path: 'aDESTINATARIO', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Fieldname2}" text="{sHelp>Fieldname2}"/>
                   </ComboBox>
                  </form:fields>
                </form:FormElement>
                <form:FormElement label="{i18n>Raggruppamento}">
                  <form:fields>
                    <!-- <Input value="{sDetail>/Raggruppamento}" type="Text" maxLength="10"/> -->
                    <ComboBox  value="{sDetail>/Raggruppamento}" items="{ path: 'sHelp>/T_RAGGR/RAGGRUPPAMENTO', sorter: [{ path: 'aRAGGRUPPAMENTO', descending: false, group:false }] }" >
                   <core:Item key="{sHelp>Raggruppamento}" text="{sHelp>Raggruppamento}"/>
                   </ComboBox>
                  </form:fields>
                </form:FormElement>
              </form:formElements>
            </form:FormContainer>
          </form:formContainers>
        </form:Form>
        
        </f:content>
    </f:DynamicPage>
  </NavContainer>
</mvc:View>